#!/bin/sh

export PATH="$PATH:/usr/local/opt/node@20/bin"

if test -f "/etc/os-release"; then
    if grep 'ID=nixos' /etc/os-release >/dev/null; then
        PATH="$(echo "$PATH" | sed -e 's@:node_modules/.bin@@g' -e 's@node_modules/.bin:@@g')" biome check --write ./services
    fi
else
    npx @biomejs/biome check --write ./services
fi
